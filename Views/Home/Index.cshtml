@using System.Data;
@model DataTable
@{
    ViewData["Title"] = "Home";
    Layout = "/Views/Shared/_LayoutMain.cshtml";
}

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap.min.css"/>

<script type="text/javascript" src="https://code.jquery.com/jquery-3.5.1.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.min.js"></script>
<script type="text/javascript" src="https://cdn.datatables.net/1.13.1/js/dataTables.bootstrap.min.js"></script>


@*<link href="~/css/datatables.bootstrap.min.css" rel="stylesheet" />*@


<!-- Page Content -->
<div id="content">
    <nav class="navbar navbar-default">
        <div class="container-fluid">
            <ul class="nav navbar-nav navbar-right">
                @*<li>
                    <a href="#">
                        <i class="zmdi zmdi-notifications text-danger"></i>
                    </a>
                </li>
                <li><a href="#">Welcome - @ViewBag.user</a></li>*@
            </ul>
        </div>
    </nav>
    <div class="container-fluid">
        <h1>File Indexing</h1>
        <br />
        <p>
            <table id="table" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>File_Id</th>
                        <th>Name</th>
                        <th>Number</th>
                        <th>Section</th>
                        <th>Location</th>
                        <th>Place</th>
                        <th>Part of Place</th>
                        <th>Row No.</th>
                        <th>Column</th>
                    </tr>
                </thead>
        <tbody>
                    @foreach (DataRow row in Model.Rows)
                    {
                   <tr>
                            <td>@row["file_id"]</td>
                            <td>@row["file_name"]</td>
                            <td>@row["file_num"]</td>
                            <td>@row["section"]</td>
                            <td>@row["location"]</td>
                            <td>@row["almirah"]</td>
                            <td>@row["part"]</td>
                            <td>@row["row"]</td>
                            <td>@row["col"]</td>
                        </tr>
                    }   
        </tbody>                
        <tfoot>
            <tr>
                <th colspan="9" style="background-color:aliceblue; height:20px;"></th>                
            </tr>
        </tfoot>
    </table>
        </p>
    </div>
</div>

<script >
    $(document).ready(function () {
        $('#table').DataTable();
    });
    </script>


<!-- /#page-content-wrapper -->